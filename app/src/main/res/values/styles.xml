<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:icon">@mipmap/ic_launch_icon</item>
        <item name="android:displayOptions">showTitle|showHome</item>
        <item name="android:titleTextStyle">@style/titleText</item>
    </style>

    <style name="titleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
